@page "/auto-registering-services"
@using DependencyInjection.Services.AutoRegisteredServices
@inject AutoScopedService AutoScopedService
@inject AutoScopedService AutoScopedService2
@inject AutoSingletonService AutoSingletonService
@inject AutoSingletonService AutoSingletonService2
@inject AutoTransientService AutoTransientService
@inject AutoTransientService AutoTransientService2

<h3>AutoRegisteringServices</h3>
<div class="with-border">
    <h2>Auto Scoped services:</h2>
    <div>scoped service1 data: @AutoScopedService.ExampleId</div>
    <div>scoped service2 data: @AutoScopedService2.ExampleId</div>
</div>
<div class="with-border">
    <h2>Auto Singleton services:</h2>
    <div>singleton service1 data: @AutoSingletonService.ExampleId</div>
    <div>singleton service2 data: @AutoSingletonService2.ExampleId</div>
</div>
<div class="with-border">
    <h2>Auto Transient services:</h2>
    <div>transient service1 data: @AutoTransientService.ExampleId</div>
    <div>transient service2 data: @AutoTransientService2.ExampleId</div>
</div>

<h1>
    <NavLink href="/">Back to Index</NavLink>
</h1>

