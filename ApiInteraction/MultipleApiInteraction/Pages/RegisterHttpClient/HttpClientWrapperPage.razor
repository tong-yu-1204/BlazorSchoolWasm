@page "/http-client-wrapper"
@using SharedLib.Utilities
@using Shared.Data.Models
@using NickLovesToCode.Components.RazorComponents
@inject SecondApiHttpClientWrapper SecondApiHttpClientWrapper
<h3>HttpClientWrapperPage</h3>
<BookListDisplay Books="Books"></BookListDisplay>
<hr />
<button type="button" @onclick="FetchBooksAsync">取得書本們</button>


<h1><NavLink href="/">Back to Index</NavLink></h1>

@code {
    public List<BookDetails> Books { get; set; } = new();


    public async Task FetchBooksAsync()
    {
        Books = await SecondApiHttpClientWrapper.GetListOfBookDetails();
    }



}
