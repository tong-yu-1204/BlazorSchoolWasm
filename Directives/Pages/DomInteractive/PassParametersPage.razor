@page "/pass-parameters"
<h3>PassParametersPage</h3>

<div>
    <button type="button" @onclick="_ => ExampleMethodWithoutHtmlEvent(ExampleString)">Example parameteried method without HTML event</button>
</div>

<div>
    <button type="button" @onclick="(e) => ExampleMethodWithHtmlEvent(e, ExampleString)">Example parameteried method with HTML event</button>
</div>


<h2>Message: @Message</h2>
<h1><NavLink href="/">Back to Index</NavLink></h1>

@code {
    public string ExampleString { get; set; } = "Blazor School";
    public string Message { get; set; } = "";

    public void ExampleMethodWithHtmlEvent(MouseEventArgs eventArgs, string exampleString)
    {
        Message = $"Mouse {eventArgs.Button} clicked; received parameter: {exampleString}";

    }

    public void ExampleMethodWithoutHtmlEvent(string exampleString)
    {
        Message = $"Received parameter: {exampleString}";

    }

}
