@page "/stop-propagation-examples"
<h3>StopPropagationExamplesPage</h3>
<div>Without stopPropagation</div>
<button type="button" @onclick='_ => Message += "<code>Level 1</code> clicked."'>
    Level 1
    <button type="button" @onclick='_ => Message += "<code>Level 2</code> clicked."'>
        Level 2
        <button type="button" @onclick='_ => Message += "<code>Level 3</code> clicked."'>
            Level 3
        </button>
    </button>
</button>
<div>With stopPropagation</div>
<button type="button" @onclick='_ => Message += "||<code>Level 1</code> clicked.||"'>
    Level 1
    <button type="button" @onclick='_ => Message += "||<code>Level 2</code> clicked. StopProgation here at Level 2.||"'
        @onclick:stopPropagation
    >
        Level 2
        <button type="button" @onclick='_ => Message += "||<code>Level 3</code> clicked.||"'>Level 3</button>
    </button>
</button>

<h2>Message: @((MarkupString)Message)</h2>

<button type="button" @onclick='_ => Message = ""'>Reset Message</button>

<h1><NavLink href="/">Back to Index</NavLink></h1>
@code {
    public string Message { get; set; } = "";

}
