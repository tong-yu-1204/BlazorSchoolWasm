@page "/validation-against-static-data"
@using FormDemonstrate.FormModels.Validation
@using Microsoft.AspNetCore.Components.Forms
<h3>Against Static Data Page</h3>
<EditForm Model="FormModel">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label>
            ExampleString:
            <InputText @bind-Value="FormModel.ExampleString" />
        </label>
    </div>
    <ValidationMessage For="() => FormModel.ExampleString" />
    <div>
        <label>
            ExampleInt:
            <InputNumber @bind-Value="FormModel.ExampleInt" />
        </label>
    </div>
    <ValidationMessage For="() => FormModel.ExampleInt" />
    <button>Submit</button>


</EditForm>

<h1><NavLink href="/">Back to Index</NavLink></h1>


@code {
    public AgainstStaticDataFormModel FormModel { get; set; } = new();

}
