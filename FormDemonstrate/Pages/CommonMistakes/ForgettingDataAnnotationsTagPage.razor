@page "/forgetting-data-annotations-validator-tag"
@using FormDemonstrate.FormModels.CommonMistakes
@using Microsoft.AspNetCore.Components.Forms

<h3>ForgettingDataAnnotationsTagPage</h3>
<EditForm Model="FormModel" OnSubmit='() => Message ="The validation message should be shown, but we forget the DataAnnotationsValidator tag"'>
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <label>
        Input your text:
        <InputText @bind-Value="FormModel.RequiredString"/>
    </label>
    <ValidationMessage For="() => FormModel.RequiredString"/>
    <button>Submit</button>

</EditForm>
<h2>Message: "@Message"</h2>

<h1><NavLink href="/">Back to Index</NavLink></h1>

@code {
    public ForgettingDataAnnotationsTagFormModel FormModel { get; set; } = new();

    public string Message { get; set; } = "Initial";

}
