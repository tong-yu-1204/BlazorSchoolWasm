@page "/disable-form-controls"
@using FormDemonstrate.FormModels
@using Microsoft.AspNetCore.Components.Forms
<h3>DisableFormControlsPage</h3>
<EditForm Model="FormModel" OnSubmit="() => {}">
    <label>
        Form Control 1:
        <InputText @bind-Value="FormModel.ExampleString" disabled="true"/>
    </label>
    <label>
        Form Control 2:
        <InputText @bind-Value="FormModel.ExampleString" @bind-disabled="DisableFormControl2"/>
    </label>
    <button type="button" @onclick="() => DisableFormControl2 = !DisableFormControl2">Toggle Disabled</button>
</EditForm>


<h1><NavLink href="/">Back to Index</NavLink></h1>


@code {
    public DisableFormControlsFormModel FormModel { get; set; } = new();
    public bool DisableFormControl2 { get; set; }
}
